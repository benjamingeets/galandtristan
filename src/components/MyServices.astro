---
import { Markdown } from 'astro/components';
import Button from './Button.astro';
const {data} = Astro.props
---

<section id="services" class="flex flex-col w-full max-w-6xl gap-10 mx-auto mt-32 lg:px-20 xl:flex-row 2xl:gap-24 lg:mt-48 2xl:px-0">
    <div id="services-text" class="flex-col items-start hidden p-20 xl:w-6/12 bg-gray-dark 2xl:py-24 space-y-7 rounded-2xl lg:flex">
        <h2 class="text-3xl font-semibold">{data.item[0].nom}</h2>
        <Markdown content={data.item[0].texte}/>
        <Button href="#contact">Me contacter</Button>
    </div>
    <div class="grid w-full gap-10 px-4 lg:px-0 xl:w-6/12 2xl:gap-24 lg:grid-cols-2">
        {data.item.map(service=>
            <div class="p-[2px] cursor-pointer lg:aspect-square service-item rounded-2xl">
                <div class="flex flex-col w-full h-full p-5 lg:p-0 bg-gray-dark lg:items-center rounded-2xl">
                    <h3 class="order-2 text-xl font-semibold lg:order-1 my-7">
                        {service.nom}
                    </h3>
                    <figure class="order-1 w-24 lg:order-2">
                        <img class="" src={service.image.url} alt="">
                    </figure>
                        <Markdown class="order-3 text-2xl font-semibold lg:hidden mt-7" content={service.texte}/>
        
                </div>
            </div>
        )}
    </div>
    
</section>

<style>
    #services-text p{
        @apply text-2xl font-semibold;
    }
</style>