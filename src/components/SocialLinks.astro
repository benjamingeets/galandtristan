---
import Icon from './Icon.astro';
const {links} = Astro.props
let urls = []
links.forEach(link=>{
    let url = new URL(link.lien)
    let displayLink = {
        link,
        icon:url.host.split('.')[0]
    }
    urls.push(displayLink)
})
---
    <nav class="fixed hidden left-4 top-80 lg:block">
        <ul class="flex flex-col gap-3">
            {urls.map(link=>
                <li>
                    <a class=" stroke-gray" target="_blank" href={link.link.lien}>
                        <Icon name={link.icon} classes=" stroke"/>
                    </a>
                </li>
            )}
        </ul>
    </nav>