---
const {data} = Astro.props
---

<article class="relative grid mt-20 overflow-hidden text-white md:grid-cols-11 rounded-2xl group">
    <figure class="col-span-11 md:col-span-7 h-80 md:h-96">
        <img class="object-cover w-full h-full transition md:opacity-50 group-hover:opacity-100" src={data.mockup.url} alt="">
    </figure>
    <div class="z-20 flex flex-col col-span-11 p-10 md:col-span-4 bg-loakgrey-dark">
        <figure>
            <img src={data.icone.url} height={data.icone.height} width={data.icone.width} alt={data.icone.alt}>
        </figure>
        <p class="text-xl mt-11">{data.description}</p>
        <a href={"/realisations/"+data.slug+"/"} class="items-center justify-between mt-auto text-2xl opacity-0 md:opacity-100 md:flex before:inset-0 before:absolute text-loakgrey">Voir le projet</a>
    </div>
</article>

<style>
    article:hover div a{
         background: -webkit-linear-gradient(#72AFD3, #37ECBA);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    article:hover div a::after{
	    content: url("data:image/svg+xml,%3Csvg width='13' height='23' viewBox='0 0 13 23' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M2 2.5L11 11.5L2 20.5' stroke='url(%23paint0_linear_2067_59236)' stroke-width='3.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3Cdefs%3E%3ClinearGradient id='paint0_linear_2067_59236' x1='11.0051' y1='20.5' x2='-3.40309' y2='13.2959' gradientUnits='userSpaceOnUse'%3E%3Cstop stop-color='%2372AFD3'/%3E%3Cstop offset='1' stop-color='%2337ECBA'/%3E%3C/linearGradient%3E%3C/defs%3E%3C/svg%3E");
    }
    a::after{
        content:url("data:image/svg+xml,%3Csvg width='13' height='23' viewBox='0 0 13 23' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M2 2.5L11 11.5L2 20.5' stroke='%23888787' stroke-width='3.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
    }
</style>