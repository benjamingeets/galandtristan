---
import Button from './Button.astro';
const {icon,current} = Astro.props
const links = [
    {
        label: 'Accueil',
        href:"/",
        button:false
    },
    {
        label: 'RÃ©alisations',
        href:"/realisations",
        button:false
    },
    {
        label: 'Me contacter',
        href:"/",
        button:true
    },
]
---

<section class="flex justify-between w-full px-4 mx-auto mb-48 mt-14 max-w-8xl">
    <figure class="flex items-end gap-6">
        <img class="w-8 h-8 " src={icon} alt="">
        <figcaption class="flex items-end">
            <a href="/" class="text-2xl "> 
                Galand Tristan
            </a>
        </figcaption>
    </figure>
    <nav>
        <ul class="flex gap-16">
            {links.map(link=>
                <li>
                    {!link.button &&
                    <a class={"px-5 py-2 text-xl font-semibold rounded-md hover:bg-white hover:bg-opacity-10" + " " + (current.pathname == link.href ? "text-gradient": null)} href={link.href}>
                        {link.label} 
                    </a>
                    }
                    {link.button &&
                        <Button href={link.href}>
                            {link.label}
                        </Button>
                    }
                </li>
            )}
        </ul>
    </nav>
</section>

