---
import Button from './Button.astro';
const {icon,current} = Astro.props
const links = [
    {
        label: 'Accueil',
        href:"/",
        button:false
    },
    {
        label: 'RÃ©alisations',
        href:"/realisations",
        button:false
    },
    {
        label: 'Me contacter',
        href:"/",
        button:true
    },
]
---

<section class="flex items-center justify-between w-full max-w-6xl px-4 mx-auto mt-3 mb-20 lg:mb-48 md:mt-14">
    <figure class="flex items-end gap-6">
        <img class="w-8 h-8 " src={icon} alt="">
        <figcaption class="flex items-end">
            <a href="/" class="text-2xl "> 
                Galand Tristan
            </a>
        </figcaption>
    </figure>
    <button class="flex flex-col w-6 gap-1 md:hidden">
        <div class="w-full h-[2px] bg-white">
        </div>
        <div class="w-full h-[2px] bg-white">
        </div>
        <div class="w-full h-[2px] bg-white">
        </div>
        <span class="sr-only">
            Menu
        </span>
    </button>
    <nav class="hidden md:block">
        <ul class="flex items-center gap-16">
            {links.map(link=>
                <li>
                    {!link.button &&
                    <a class={"px-5 py-2 text-xl font-semibold rounded-md hover:bg-white hover:bg-opacity-10" + " " + (current.pathname == link.href ? "text-gradient": null)} href={link.href}>
                        {link.label} 
                    </a>
                    }
                    {link.button &&
                        <Button href={link.href}>
                            {link.label}
                        </Button>
                    }
                </li>
            )}
        </ul>
    </nav>
</section>

